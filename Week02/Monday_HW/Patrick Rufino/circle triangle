//Patrick Rufino


void setup(){
  size(600,600);
  
}

void draw() {
  
  background(0,0,0);
 

  
    if (mousePressed){
      if (mouseX < 300){
        fill(255,0,0,50);
        ellipse(250,250,50,50);
      } if (mouseX > 300){
        fill(0, 255, 0,50);
        ellipse(350,350,50,50);
      } if (mouseY>300){
        fill(0,0,255,40);
        triangle(300,0,600,600,0,600);
      } if (mouseY<300){
        triangle(0,0,300,600,600,0);
       
      }
    ellipse(300,300,250,250);
  }
}
